<!-- MainWindow.xaml -->
<Window x:Class="SimpleAudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Simple Audio Player" Height="700" Width="1000" MinHeight="400" MinWidth="600">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="Select _Directory" Click="BtnSelectDir_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Search:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
             x:Name="txtSearch"
             HorizontalAlignment="Stretch"
             TextChanged="TxtSearch_TextChanged"
             Margin="5,0,0,0" FontSize="16"/>
        </Grid>



        <!-- DataGrid for files -->
        <DataGrid x:Name="dgFiles" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                  CanUserSortColumns="True" CanUserResizeColumns="True" CanUserReorderColumns="True"
                  PreviewMouseLeftButtonDown="DgFiles_PreviewMouseLeftButtonDown" SelectionChanged="DgFiles_SelectionChanged" PreviewKeyDown="DgFiles_PreviewKeyDown" >
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="3*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding DurationString}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Playback controls -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnPlay" Grid.Row="0" Grid.Column="0" Content="Play" Click="BtnPlay_Click" Margin="2"/>
            <Button x:Name="btnPause" Grid.Row="0" Grid.Column="1" Content="Pause" Click="BtnPause_Click" Margin="2"/>
            <Button x:Name="btnStop" Grid.Row="0" Grid.Column="2" Content="Stop" Click="BtnStop_Click" Margin="2"/>
            <Button x:Name="btnPlaySegment" Grid.Row="0" Grid.Column="3" Content="Play Segment" Click="BtnPlaySegment_Click" Margin="2"/>

            <Label Grid.Row="0" Grid.Column="4" Content="Start (s):" Margin="2"/>
            <TextBox x:Name="txtStart" Grid.Row="0" Grid.Column="5" Width="60" Text="0" Margin="2"/>
            <Label Grid.Row="0" Grid.Column="6" Content="End (s):" Margin="2"/>
            <TextBox x:Name="txtEnd" Grid.Row="0" Grid.Column="7" Width="60" Text="0" Margin="2"/>

            <Label Grid.Row="0" Grid.Column="8" Content="Volume:" Margin="2"/>
            <Slider x:Name="sldVolume" Grid.Row="0" Grid.Column="9" Width="150" Minimum="0" Maximum="100" Value="100" ValueChanged="SldVolume_ValueChanged" Margin="2"/>

            <Slider x:Name="sldProgress" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="11" Minimum="0" Maximum="1000" ValueChanged="SldProgress_ValueChanged" PreviewMouseLeftButtonDown="SldProgress_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="SldProgress_PreviewMouseLeftButtonUp" Margin="2"/>
            <Label x:Name="lblTime" Grid.Row="1" Grid.Column="10" Content="00:00 / 00:00" HorizontalAlignment="Right" Margin="2"/>

            <Label x:Name="lblCurrentFile" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="11" Content="No file playing" FontWeight="Bold" Margin="2"/>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
    
    
</Window>
    
